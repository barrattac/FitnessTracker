@model List<BLL.WorkoutVM>

@{
    ViewBag.Title = "Checklist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model[0].PlanDate.ToString("D")</h2>

@if (Model == null || Model[0].Exercise == null)
{
    <p>You currently do not have any workouts scheduled for @Model[0].PlanDate.ToString("D")</p>
}
else
{
    using (Html.BeginForm("MarkComplete", "CheckList", FormMethod.Post))
    {
        for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(m => m[i].ID)
            <p>@Html.CheckBoxFor(m => m[i].Complete) @Model[i].Exercise.ExerciseName, @Model[i].NumberSets sets of @Model[i].Amount</p>
        }
        <input type="submit" value="Mark Completed Exercises" />
    }
}
<div>
    @Html.ActionLink("Add Workout", "AddWorkout", "WorkoutPlanner", Model[0].PlanDate, new { })
</div>
<div>
    @Html.ActionLink("Back to Month", "ChangeMonth", "WorkoutPlanner", Model[0].PlanDate, new { })
</div>