@model BLL.Graphs

@{
    ViewBag.Title = "Stats";
}

<div style="position:relative; height: 100%; width: 100%;">
    <div class="graph" id="graphOne">
        @if (Model != null && Model.Weight.Columns > 1)
        {
            <div class="graphTitle">
                <h3>@Model.Weight.Title</h3>
            </div>
            <div class="leftSideGraph">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="leftSideContents">
                        @Model.Weight.LeftSide[9 - i]
                    </div>
                }
            </div>
            <div class="graphContainer">
                @for (int i = 0; i < Model.Weight.Columns - 1; i++)
                {
                    <div class="graphBar" style="height: @Model.Weight.BarHeights[i]; top: @Model.Weight.BarTop[i];"></div>
                }
            </div>
            <div class="graphBottom">
                @for (int i = 0; i < Model.Weight.Columns - 1; i++)
                {
                    <div class="columnName">
                        @Model.Weight.Bottom[i]
                    </div>
                }
            </div>
        }
    </div>
